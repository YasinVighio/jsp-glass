{
  "name": "jsp-glass",
  "displayName": "JSP Glass",
  "description": "Debug JSP files running on Apache Tomcat with accurate breakpoint mapping using SMAP",
  "version": "1.0.0",
  "publisher": "syntaxkraken",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/syntaxkraken/jsp-glass.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "jsp",
    "tomcat",
    "java",
    "debug",
    "servlet"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onDebugResolve:jsp",
    "onDebugInitialConfigurations",
    "onCommand:jsp.showCompiledServletPath"
  ],
  "contributes": {
    "debuggers": [
      {
        "type": "jsp",
        "label": "JSP Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "attach": {
            "required": [
              "hostName",
              "port"
            ],
            "properties": {
              "hostName": {
                "type": "string",
                "description": "Host name or IP address of the target JVM",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Port number for JPDA debugging",
                "default": 8000
              },
              "projectName": {
                "type": "string",
                "description": "Name of the Java project to debug"
              },
              "timeout": {
                "type": "number",
                "description": "Connection timeout in milliseconds",
                "default": 30000
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "jsp",
            "request": "attach",
            "name": "Attach to Tomcat (JSP Debug)",
            "hostName": "localhost",
            "port": 8000
          }
        ],
        "configurationSnippets": [
          {
            "label": "JSP: Attach to Tomcat",
            "description": "A new configuration for debugging JSP files on Tomcat",
            "body": {
              "type": "jsp",
              "request": "attach",
              "name": "Attach to Tomcat (JSP Debug)",
              "hostName": "localhost",
              "port": 8000
            }
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "jsp.showCompiledServletPath",
        "title": "Show Compiled Servlet Path",
        "category": "JSP"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.51.0",
    "vscode-debugprotocol": "^1.51.0"
  },
  "extensionDependencies": [
    "vscjava.vscode-java-debug"
  ]
}